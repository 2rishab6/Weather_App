<!DOCTYPE html>
<html lang="en">
<head>
  {{>headerlink}}
  <title>Weather App</title>
</head>
<body>
  {{>navbar}} 

    <!-- main header -->
    <div class="container-fluid main_header">
      <div class="row">
          <div class="col-md-10 col-12 mx-auto ">
              <div class="row">
                <div class="col-md-6 col-12 main_header_left">
                  <!-- left side -->
                  <p>Welcome to Weather app</p>
                  <h1>Get The Latest <span class="text_clr">Weather</span> Info of your city❤️</h1>
                  <a href="/weather"><button class="btn btn-danger">Check Now</button></a>
                </div>
                <div class="col-md-6 col-12 main_header_right">
                  <!-- right side -->
                  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img class="w-100" src="img/autumn.jpg" alt="First slide">
                      </div>
                      <div class="carousel-item">
                        <img class="w-100" src="img/rainy.jpg" alt="Second slide">
                      </div>
                      <div class="carousel-item">
                        <img class="w-100" src="img/winter.jpg" alt="Third slide">
                      </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
                </div>
              </div>
          </div>
      </div>
    </div>
    {{>footer}}
</body>
</html>